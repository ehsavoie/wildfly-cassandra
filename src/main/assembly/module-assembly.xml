<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>module</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>uninstall-cassandra.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/lib</directory>
            <filtered>false</filtered>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/cassandra/main</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>nodetool</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/config</directory>
            <outputDirectory>standalone/configuration/</outputDirectory>
            <includes>
                <include>standalone-cassandra.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/config</directory>
            <outputDirectory>domain/configuration/</outputDirectory>
            <includes>
                <include>cassandra-domain.xml</include>
                <include>cassandra-host.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/module/main</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/cassandra/main</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/module/main</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/cassandra/main/conf</outputDirectory>
            <includes>
                <!-- TODO: this should be turned into DMR config as well -->
                <include>cassandra-rackdc.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/cassandra/main</outputDirectory>
            <includes>
                <include>wildfly-cassandra.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <!--<outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping>-->
            <outputDirectory>modules/system/layers/base/org/wildfly/extension/cassandra/main</outputDirectory>
            <includes>
                <include>org.apache.cassandra:cassandra-all</include>
                <include>org.apache.cassandra:cassandra-thrift</include>
                <include>com.datastax.cassandra:cassandra-driver-core</include>

                <include>org.xerial.snappy:snappy-java</include>
                <include>net.jpountz.lz4:lz4</include>
                <include>com.ning:compress-lzf</include>
                <include>com.google.guava:guava</include>
                <include>commons-codec:commons-codec</include>
                <include>org.apache.commons:commons-lang3</include>
                <include>org.antlr:antlr</include>
                <include>org.antlr:antlr-runtime</include>
                <include>org.codehaus.jackson:jackson-core-asl</include>
                <include>org.codehaus.jackson:jackson-mapper-asl</include>
                <include>com.googlecode.json-simple</include>
                <include>com.boundary:high-scale-lib</include>
                <include>org.mindrot:jbcrypt</include>
                <include>io.dropwizard.metrics:metrics-core</include>
                <include>com.addthis.metrics:reporter-config-base</include>
                <include>com.addthis.metrics:reporter-config3</include>
                <include>com.thinkaurelius.thrift</include>
                <include>com.lmax:disruptor</include>
                <include>org.apache.thrift</include>
                <include>org.jgrapht:jgrapht-core</include>

                <include>com.github.jbellis:jamm</include>
                <include>net.java.dev.jna:jna</include>
                <include>org.yaml:snakeyaml</include>
                <include>com.clearspring.analytics:stream</include>
                <include>it.unimi.dsi:fastutil</include>

                <include>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</include>
                <include>io.netty:netty-all</include>
            </includes>
            <excludes>
                <exclude>io.netty:netty-common</exclude>
                <exclude>io.netty:netty-common</exclude>
                <exclude>io.netty:netty-handler</exclude>
                <exclude>io.netty:netty-codec</exclude>
                <exclude>io.netty:netty-buffer</exclude>
                <exclude>io.netty:netty-transport</exclude>
                <exclude>ch.qos.logback:logback-core</exclude>
                <exclude>ch.qos.logback:logback-classic</exclude>
                <exclude>org.slf4j:log4j-over-slf4j</exclude>
            </excludes>
        </dependencySet>

    </dependencySets>
</assembly>